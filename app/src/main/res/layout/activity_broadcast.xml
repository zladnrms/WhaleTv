<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <net.ossrs.yasea.SrsCameraView
            android:id="@+id/glsurfaceview_camera"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" />

        <LinearLayout
            android:id="@+id/layout_chat"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_gravity="bottom"
            android:orientation="vertical"
            android:visibility="gone">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_chat_list"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@android:color/transparent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_chat"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:imeOptions="actionSend"
                    android:inputType="text"
                    android:maxLength="50"
                    android:maxLines="1" />

                <Button
                    android:id="@+id/btn_chat_send"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#368AFF"
                    android:text="전 송"
                    android:textColor="#ffffff"
                    android:textSize="16sp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_subject"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:maxLength="35"
                    android:text="방 제목"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:background="@android:color/transparent"/>

                <Button
                    android:id="@+id/btn_edit_subject"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="9dp"
                    android:background="@drawable/ic_pencil" />

                <Button
                    android:id="@+id/btn_edit_subject_submit"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="9dp"
                    android:visibility="gone"
                    android:background="@drawable/ic_check" />


            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="5dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="8dp"
                    android:src="@drawable/ic_viewer_count"/>

                <TextView
                    android:id="@+id/tv_viewer_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLength="20"
                    android:text="1"
                    android:textColor="#FFFFFF"
                    android:textSize="13sp" />

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/cast"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center|right"
            android:background="@drawable/ic_record_start" />

        <!-- 옵션 버튼 (카메라 회전, 음소거 등)-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|top"
            android:layout_marginRight="12dp"
            android:layout_marginTop="12dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/swCam"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_marginBottom="14dp"
                android:background="@drawable/ic_rot_camera" />

            <Button
                android:id="@+id/swMic"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_marginBottom="14dp"
                android:background="@drawable/ic_mute_off" />

            <Button
                android:id="@+id/rotate"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_marginBottom="14dp"
                android:background="@drawable/ic_rotation"/>

        </LinearLayout>

        <!--
        <Button
            android:id="@+id/record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|top"
            android:text="record" />
            -->

        <!--
        <Button
            android:id="@+id/swEnc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|top"
            android:text="soft encoder" />
            -->

    </FrameLayout>

</layout>