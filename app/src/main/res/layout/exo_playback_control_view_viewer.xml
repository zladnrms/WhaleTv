<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:background="#CC000000"
        android:layoutDirection="ltr"
        android:orientation="vertical">

        <!-- title bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginTop="6dp"
            android:gravity="left"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_back"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="left|center"
                android:layout_marginRight="6dp"
                android:background="@drawable/ic_backarrow" />

            <TextView
                android:id="@+id/tv_subject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="즈바드님의 영상"
                android:textColor="#FFFFFF"
                android:textSize="17sp" />

        </LinearLayout>

        <!-- viewer count -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="25dp"
                android:layout_marginRight="8dp"
                android:src="@drawable/ic_eye_transparent" />

            <TextView
                android:id="@+id/tv_viewer_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLength="20"
                android:text="1"
                android:textColor="#FFFFFF"
                android:textSize="13sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <!-- player control bar -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="5dp">

                <Button
                    android:id="@+id/btn_like"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/ic_thumb_white" />

                <Button
                    android:id="@+id/btn_bookmark"
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/ic_bookmark_no" />

                <Button
                    android:id="@+id/btn_orientation"
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:background="@drawable/ic_collapse" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>