<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="holder"
            type="zladnrms.defytech.kim.BroadcastTv.adapter.RecentVideoListAdapter.ViewHolder" />

        <variable
            name="videoInfo"
            type="zladnrms.defytech.kim.BroadcastTv.model.domain.VideoInfo" />
    </data>

    <FrameLayout
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:background="#FFFFFF"
        android:orientation="horizontal"
        android:paddingBottom="7dp"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:paddingTop="7dp">

        <ImageView
            android:id="@+id/iv_recent_video_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="top">

            <TextView
                android:id="@+id/tv_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="닉네임"
                android:textColor="#1266FF"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="bottom">

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:text="2017-11-14 15:21:34"
                android:textColor="#FFFFFF"/>

        </LinearLayout>

    </FrameLayout>

</layout>